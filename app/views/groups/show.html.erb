<div class="col-md-12">
  <% if current_user %>
    <div class="group pull-right">
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-sm btn-primary") if @group.editable_by?(current_user) %>
      <% if current_user.is_member_of?(@group) %>
        <%= link_to("New Post", new_group_post_path(@group), class: "btn btn-sm btn-primary") %>
        <%= link_to("Quit Group", quit_group_path(@group), method: :post, class: "btn btn-sm") %>
      <% else %>
        <%= link_to("Join Group", join_group_path(@group), method: :post, class: "btn btn-sm") %>
      <% end %>
    </div>
  <% end %>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <caption>Comments</caption>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author.name %></td>
        <td><%= post.content %></td>
        <td>
        <% if current_user && post.editable_by?(current_user) %>
          <%= link_to("edit", edit_group_post_path(@group, post), class: "btn btn-sm btn-default") %>
          <%= link_to("delete", group_post_path(@group, post), method: :delete, class: "btn btn-sm btn-default") %>
        <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

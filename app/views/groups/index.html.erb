<div class="col-md-12">
  <div class="group">
    <%= link_to("New Group", new_group_path, class: "btn btn-sm btn-primary pull-right") %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>No.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td>
          <%= link_to("edit", edit_group_path(group), class: "btn btn-default btn-sm", role: "button") %>
          <%= link_to("delete", group_path(group), class: "btn btn-default btn-sm", method: :delete, data: { confirm: "Are you sure?" }) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

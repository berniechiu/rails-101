<div class="col-md-12">
  <table class="table">
    <caption>Comments</caption>
    <thead>
      <tr>
        <th>Content</th>
        <th>Group Name</th>
        <th>Last Update</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.group.title %></td>
        <td><%= post.updated_at.to_s(:long) %></td>
        <td>
        <% if current_user && post.editable_by?(current_user) %>
          <%= link_to("edit", edit_group_post_path(post.group, post), class: "btn btn-sm btn-default") %>
          <%= link_to("delete", group_post_path(post.group, post), method: :delete, class: "btn btn-sm btn-default") %>
        <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-12">
  <h2>My Groups</h2>

  <table class="table">
    <thead>
      <tr>
        <th>No.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Post Count</th>
        <th>Last Update</th>
      </tr>
    </thead>
    <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.title %></td>
        <td><%= group.description %></td>
        <td><%= group.posts.size %></td>
        <td><%= group.updated_at.to_s(:long) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
